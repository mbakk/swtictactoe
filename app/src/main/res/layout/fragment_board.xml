<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".controller.BoardFragment">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:background="@drawable/bb8background"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <TableLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/tb_layout"
                android:background="@color/vanillawhite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_status"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline3">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tag="0"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/bb8backgroundcolor"
                        app:srcCompat="@drawable/sbrplaceholder"
                        android:id="@+id/imgbtn1" android:scaleType="centerInside"/>
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tag="1"
                        android:background="@color/bb8backgroundcolor"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/sbrplaceholder"
                        android:id="@+id/imgbtn2" android:scaleType="centerInside"/>
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tag="2"
                        android:layout_weight="1"
                        android:background="@color/bb8backgroundcolor"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/sbrplaceholder"
                        android:id="@+id/imgbtn3" android:scaleType="centerInside"
                />
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tag="3"
                        android:layout_weight="1"
                        android:background="@color/bb8backgroundcolor"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/sbrplaceholder"
                        android:id="@+id/imgbtn6" android:scaleType="centerInside" android:adjustViewBounds="true"/>
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tag="4"
                        android:background="@color/bb8backgroundcolor"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/sbrplaceholder"
                        android:id="@+id/imgbtn5" android:scaleType="centerInside"/>
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tag="5"
                        android:background="@color/bb8backgroundcolor"
                        android:layout_marginBottom="5dp"
                        app:srcCompat="@drawable/sbrplaceholder"
                        android:id="@+id/imgbtn4" android:scaleType="centerInside"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tag="6"
                        app:srcCompat="@drawable/sbrplaceholder"
                        android:background="@color/bb8backgroundcolor"
                        android:layout_marginRight="5dp"
                        android:id="@+id/imgbtn7" android:scaleType="centerInside"/>
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tag="7"
                        android:background="@color/bb8backgroundcolor"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/sbrplaceholder"
                        android:id="@+id/imgbtn8" android:scaleType="centerInside"/>
                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tag="8"
                        android:background="@color/bb8backgroundcolor"
                        app:srcCompat="@drawable/sbrplaceholder"
                        android:id="@+id/imgbtn9" android:scaleType="centerInside"/>
            </TableRow>
        </TableLayout>
        <TextView
                android:text="Mads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/vanillawhite"
                android:textSize="20sp"
                android:id="@+id/tv_status"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
        <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_restart"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline3"
                android:id="@+id/chronometer"/>
        <Button
                android:text="@string/start_button_restart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_restart"
                android:padding="15dp"
                android:background="@color/vanillawhite"
                app:layout_constraintEnd_toEndOf="@+id/btn_lb"
                app:layout_constraintStart_toStartOf="@+id/btn_lb"
                app:layout_constraintHorizontal_bias="0.501" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_lb"/>
        <Button
                android:text="Leaderboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/vanillawhite"
                android:padding="15dp"
                android:id="@+id/btn_lb"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline3"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.585736"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline4"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.09"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>